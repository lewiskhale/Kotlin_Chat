<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:minHeight="30dp"
            android:background="@drawable/open_chat_from_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="32dp" android:layout_marginTop="8dp">

        <TextView
                android:textAlignment="textEnd"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:padding="2dp"
                android:id="@+id/open_chat_from_text"
                android:textColor="@color/Black"
                android:maxWidth="180dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="10dp"
                android:text="Some text over here Some text over here Some text over here Some text over here"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/open_chat_from_time"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/open_chat_from_time"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:textColor="@color/DarkSlateGray"
                android:layout_alignParentLeft="true"
                android:text="12:01pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>