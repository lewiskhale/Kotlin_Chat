<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".UserLogin.ResetPasswordActivity"
>

    <com.google.android.material.appbar.MaterialToolbar
            android:background="@color/color_primary"
            android:orientation="horizontal"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/password_reset_toolbar">

        <TextView
                android:textColor="@color/White"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Some Text Here"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <EditText
            android:inputType="textEmailAddress"
            android:textColor="@color/color_primary"
            android:hint="Enter your email here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/password_reset_toolbar"
            android:id="@+id/password_reset_text"/>

    <com.google.android.material.button.MaterialButton
            android:background="@drawable/login_button_bg"
            android:text="Reset Password"
            android:textColor="@color/White"
            android:fontFamily="sans-serif-condensed-medium"
            app:cornerRadius="75dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/password_reset_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/password_reset_button"/>

    <ProgressBar
            android:id="@+id/password_reset_progressbar"
            android:indeterminateTint="@color/color_secondary"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_reset_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" 
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" 
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>