<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:minHeight="30dp"
            android:background="@drawable/open_chat_to_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp">

        <TextView
                android:maxLines="6"
                android:maxWidth="180dp"
                android:inputType="textMultiLine"
                android:padding="2dp"
                android:id="@+id/open_chat_to_text"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:text="Some text over here Some text over here Some text over here Some text over here"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/open_chat_to_time"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/open_chat_to_time"
                android:layout_marginRight="5dp"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:textColor="@color/DarkSlateGray"
                android:layout_alignParentRight="true"
                android:text="12:01pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>